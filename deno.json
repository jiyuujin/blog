{
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A --allow-scripts -",
    "serve": "deno task lume -s",
    "build": "deno task lume"
  },
  "lint": {
    "exclude": ["./_site", "./_bin", "./posts", "./assets/bakeneko2.svg"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "exclude": ["./_site", "./_bin", "./posts", "./assets/bakeneko2.svg"]
  }
}
